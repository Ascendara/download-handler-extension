{
    "manifest_version": 2,
    "name": "Ascendara Download Handler",
    "version": "1.1",
    "description": "Browser extension to send downloads to Ascendara.",
    "permissions": [
      "downloads",
      "downloads.open",
      "storage",
      "<all_urls>"
    ],
    "icons": {
      "16": "icons/ascendara-16.png",
      "32": "icons/ascendara-32.png",
      "48": "icons/ascendara-48.png",
      "128": "icons/ascendara-128.png"
    },
    "background": {
      "page": "background.html",
      "persistent": true
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/ascendara-16.png",
        "48": "icons/ascendara-48.png",
        "128": "icons/ascendara-128.png"
      }
    },
    "browser_specific_settings": {
      "gecko": {
        "id": "ascendara-download-blocker@ascendara.app",
        "strict_min_version": "58.0"
      }
    }
}